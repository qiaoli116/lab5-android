<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_detail_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/lbl_name"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_detail_name_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_detail_name_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="#D8F1EB"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_detail_name_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_detail_name_label" />


    <TextView
        android:id="@+id/txt_detail_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/lbl_phone"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txt_detail_name_label"
        app:layout_constraintTop_toBottomOf="@+id/txt_detail_name_label" />

    <TextView
        android:id="@+id/txt_detail_phone_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#D8F1EB"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_detail_phone_label"
        app:layout_constraintStart_toStartOf="@+id/txt_detail_name_value" />

    <Button
        android:id="@+id/btn_detail_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/action_edit"
        app:layout_constraintEnd_toStartOf="@+id/btn_detail_delete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_detail_phone_label" />

    <Button
        android:id="@+id/btn_detail_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_delete"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_detail_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_detail_edit" />


</androidx.constraintlayout.widget.ConstraintLayout>